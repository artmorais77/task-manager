generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  admin
  member
}

enum TasksStatus {
  pending
  inProgress
  completed
}

enum TasksPriority {
  high
  medium
  low
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String
  password  String
  role      UserRole @default(member)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  teamMembers  TeamsMembers[]
  tasks        Tasks[]
  tasksHistory TasksHistory[]

  @@unique([email])
  @@map("users")
}

model Team {
  id          String   @id @default(uuid())
  name        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  teamMembers TeamsMembers[]
  tasks       Tasks[]

  @@map("teams")
}

model TeamsMembers {
  id        String   @id @default(uuid())
  userId    String
  teamId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  team Team @relation(fields: [teamId], references: [id])

  @@unique([userId, teamId]) // evita duplicar o mesmo usu√°rio no mesmo time
  @@map("team_members")
}

model Tasks {
  id          String        @id @default(uuid())
  title       String
  description String
  status      TasksStatus   @default(pending)
  priority    TasksPriority
  assignedTo  String
  teamId      String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user User @relation(fields: [assignedTo], references: [id])
  team Team @relation(fields: [teamId], references: [id])

  tasksHistory TasksHistory[]

  @@map("tasks")
}

model TasksHistory {
  id        String      @id @default(uuid())
  tasksId   String
  changedBy String
  oldStatus TasksStatus
  newStatus TasksStatus
  changedAt DateTime    @default(now())

  user  User  @relation(fields: [changedBy], references: [id])
  tasks Tasks @relation(fields: [tasksId], references: [id])

  @@map("tasks_history")
}
